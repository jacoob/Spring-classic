<?xml version="1.0" encoding="UTF-8"?>
<beans
        xmlns="http://www.springframework.org/schema/beans"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns:p="http://www.springframework.org/schema/p"
        xsi:schemaLocation="http://www.springframework.org/schema/beans
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">


    <bean id="b" class="dependencyInjection.typeofautowire.B">
        <property name="name" value="mahdi"/>
        <property name="id" value="1"/>
    </bean>

    <!--    <bean id="b1" class="B">-->
    <!--        <property name="name" value="mahdi"/>-->
    <!--        <property name="id" value="1"/>-->
    <!--    </bean>-->
    <!--    be could not autowired by name,because filed b is autowired by name b1 in class A (and autowired by name) b1 != b-->
    <bean id="a1" class="dependencyInjection.typeofautowire.A" autowire="byName">
    </bean>

    <bean id="a2" class="dependencyInjection.typeofautowire.A" autowire="byType">
    </bean>

    <bean id="a3" class="dependencyInjection.typeofautowire.A" autowire="constructor">
    </bean>

    <bean id="a4" class="dependencyInjection.typeofautowire.A" autowire="no">
        <property name="b" ref="b"/>
     </bean>



    <bean id="studentbean" class="dependencyInjection.bymultipleconstructor.Student">
        <property name="name" value="Mahdi Yaghoobi"></property>
        <constructor-arg name="id" value="1" type="int"></constructor-arg>
    </bean>

    <bean id="studentbean2" class="dependencyInjection.bymultipleconstructor.Student">
        <constructor-arg name="name" value="mmmm"/>
    </bean>

    <bean id="address1" class="dependencyInjection.bymultipleconstructor.Address">
        <property name="address" value="tehran"/>
    </bean>

    <bean id="studentbean3" class="dependencyInjection.bymultipleconstructor.Student">
        <constructor-arg ref="address1"/>
    </bean>
</beans>